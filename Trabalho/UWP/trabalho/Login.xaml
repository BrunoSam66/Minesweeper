        <TextBlock HorizontalAlignment="Left" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Margin="195,263,0,0" RenderTransformOrigin="0.468,1.316"/>
        <TextBlock HorizontalAlignment="Left" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Margin="195,348,0,0" RenderTransformOrigin="1.138,0.368"/>
        <Button x:Name="button1" Content="Entrar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,433,0,0" Width="111" Click="Button_Click"/>
        <Image HorizontalAlignment="Center" Height="159" VerticalAlignment="Top" Width="216" Margin="0,66,0,0" Source="/Assets/min.png"/>
        <HyperlinkButton Content="Jogar Offline" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,551,0,0" Click="HyperlinkButton_Click_1" RenderTransformOrigin="0.544,0.531"/>
